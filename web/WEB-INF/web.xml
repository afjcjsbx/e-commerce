<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.afjcjsbx.eshop.controller.login.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.afjcjsbx.eshop.controller.login.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.afjcjsbx.eshop.controller.search.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>com.afjcjsbx.eshop.controller.shoppingcart.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/addtocart</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RemoveToCartServlet</servlet-name>
        <servlet-class>com.afjcjsbx.eshop.controller.shoppingcart.RemoveToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveToCartServlet</servlet-name>
        <url-pattern>/removetocart</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>InsertProductServlet</servlet-name>
        <servlet-class>com.afjcjsbx.eshop.controller.product.InsertProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertProductServlet</servlet-name>
        <url-pattern>/insertproduct</url-pattern>
    </servlet-mapping>



</web-app>